<%- include("partials/_header.ejs") %>
<html>
   <!-- body -->
   <body class="main-layout inner_page">
      <!-- loader  -->
      <div class="loader_bg">
         <div class="loader"><img src="/images/loading.gif" alt="#" /></div>
      </div>
      <!-- end loader -->

      <!-- header -->
      <%- include("partials/_menu.ejs") %>
      <!-- end header inner -->
      <!-- about -->
      <div class="about">
         <div class="container">
            <div class="row">
               <div class="col-md-6">
                  <div class="titlepage text_align_left">
                     <h3 style="font-size: 24px !important; color: white !important;"><%= photo.name %></h3>
                     <p style="font-size: 18px !important; color: white !important;"><%= photo.description.substring(0, 80) + "..." %></p>
                     <a class="read_more" href="/users/<%=photo.user._id %>">Artist: <%=photo.user.username %></a>
                  </div>
               </div>
               <div class="col-md-6">
                  <div class="about_img">
                     <figure><img style="width: 450px; height: 300px;" src="<%=photo.url %>" alt="<%=photo.name %>"></figure>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <!-- end about -->
      <!-- end footer -->
      <%- include("partials/_footer.ejs") %>